<HomeScreen>:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        pos_hint: {'top': 1}

        MDButton:
            halign: "center"
            on_press: app.switch_screen_slide('settings', 'right')
            
            MDButtonIcon:
                halign: "center"
                icon: "plus"

        MDLabel:
            halign: "center"
            role: "large"
            text: "ShopPal"
            color: 1, 1, 1

        MDButton:
            halign: "center"
            on_press: app.switch_screen_slide('cart', 'left')

            MDButtonIcon:
                icon: "cart"


    ScrollView:
        size_hint: 1, .9
        Products:


<ProductButton>:
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 1

        # height is init in the python class.

        Button:
            size_hint: 1, 3
            text: "img"
            on_press: app.switch_screen_slide('product', 'up')
        
        Label:
            size_hint: 1, 1.25
            text: "info"

        Button:
            text: "Add to cart"

