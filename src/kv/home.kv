<HomeScreen>:
    orientation: "vertical"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        pos_hint: {'top': 1}
    

    MDTopAppBar:
        size_hint: 1, .1
        pos_hint: {'top': 1}
        type_height: "small"
        title: "ShopPal"
